<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.CardUi">
        <item name="android:windowBackground">@color/colorWhite</item>
    </style>

    <style name="AppTheme.Translucent">
        <item name="android:statusBarColor" tools:ignore="NewApi">@color/dark_scrim</item>
    </style>

    <style name="Widget.Motion.ImageView.Icon" parent="android:Widget">
        <item name="android:padding">4dp</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:tint">?attr/colorPrimary</item>
    </style>

    <style name="Widget.Motion.TextView.Api" parent="Widget.MaterialComponents.TextView">
        <item name="android:background">@drawable/api_background</item>
        <item name="android:textAppearance">?attr/textAppearanceListItemSecondary</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

</resources>
